<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<form method="post" action="/gifts/new">
    <input type="text" name="name" placeholder="Gift Name">
    <input type="text" name="url" placeholder="Link to Gift">
    <input type="text" name="price" placeholder="Price">
    <input type="hidden" name="friend" value="<%= @friend.id %>">
    <input type="submit" name="submit" value="submit">
</form>


    